{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "importHelpers": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "declaration": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noEmit": true,
    "outDir": "dist",
    "strict": true,
  },
  "include": [
    "src/**/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
